<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/select_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Pilih binatang kesukaanmu"
        android:textSize="19sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_language"
        android:layout_centerHorizontal="true"
        android:layout_margin="22dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/kuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:padding="16dp"
            android:text="Kuda"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <Button
            android:id="@+id/kelinci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:padding="16dp"
            android:text="Kelinci"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <Button
            android:id="@+id/kucing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:padding="16dp"
            android:text="Kucing"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:padding="16dp"
            android:text="Sapi"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <Button
            android:id="@+id/kambing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:padding="16dp"
            android:text="Kambing"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/chosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Binatang yang kamu pilih : "
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

    <!-- The following textView shows the
        preferred language chosen by the user. -->
    <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chosen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:hint="-------------"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

</RelativeLayout>
